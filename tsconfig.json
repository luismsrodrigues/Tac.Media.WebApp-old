{
  "compilerOptions": {
    "target": "es2019",
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "removeComments": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "paths": {
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/lib": [
        "./src/lib"
      ],
      "@/database/*": [
        "./src/database/*"
      ],
      "@/ui/components/*": [
        "src/www/components/*"
      ],
      "@/ui/hooks/*": [
        "src/www/hooks/*"
      ]
    }
  },
  "include": [
    "./src"
  ]
}